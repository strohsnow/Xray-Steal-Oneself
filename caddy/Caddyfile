{
  https_port 8443
  default_bind 127.0.0.1
  acme_dns cloudflare {$CLOUDFLARE_API_TOKEN}
  servers {
    listener_wrappers {
      proxy_protocol {
        allow 127.0.0.1/32
      }
      tls
    }
    trusted_proxies static 127.0.0.1/32
  }
}

{$REALITY_DOMAIN} {
  header Strict-Transport-Security "max-age=63072000"

  handle_path / {
    root * /srv
    file_server
  }

  @hwid_empty {
    path /{$SUB_PATH}
    expression "{$ALLOWED_HWID}" == ""
  }

  handle @hwid_empty {
    root * /srv
    file_server
    rewrite * /sub
    header routing "{$ROUTING_HEADER}"
  }

  @hwid_match {
    path /{$SUB_PATH}
    header_regexp x-hwid "{$ALLOWED_HWID}"
  }

  handle @hwid_match {
    root * /srv
    file_server
    rewrite * /sub
    header routing "{$ROUTING_HEADER}"
  }

  respond 404
}
